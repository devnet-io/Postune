<div class="breadcrumbs">
	<%= link_to "Admin", admin_index_path %> > 
	<%= link_to "Users", users_path %> > <%= link_to @user.name, @user %> > 
	<%= link_to "#{@user.name}'s Playlists", user_playlists_path(@user.id) %> > 
	<%= link_to @playlist.name, user_playlist_path(@playlist.user_id, @playlist.id) %>
</div>
<h1><%= @playlist.name %></h1>
<table>
	<tbody>
		<tr>
			<th>Position</th>
			<th>ID</th> 
			<th>User</th>
			<th>Title</th>
			<th>Artist</th>
			<th>Album</th>
			<th>URL</th>
			<th>Artwork</th>
		</tr>
		<% @playlist_songs.each do |p_song| %>
		<tr>
			<td><%= p_song.position %></td>
			<td><%= p_song.id %></td>
			<td><%= p_song.song.user.name %></td>
			<td><%= link_to p_song.song.title, user_playlist_playlist_song_path(@playlist.user_id, @playlist.id, p_song.id) %></td>
			<td><%= p_song.song.artist %></td>
			<td><%= p_song.song.album %></td>
			<td><%= p_song.song.url %></td>
			<td><%= p_song.song.artwork %></td>
		</tr>
		<% end %>
	</tbody>
</table>
<div class="info">
	<strong>Actions</strong> | 
	<%= link_to "Add a Song to '#{@playlist.name}'", new_user_playlist_playlist_song_path(@playlist.user_id, @playlist.id) %> | 
	<%= link_to "Edit Playlist", edit_user_playlist_path(@playlist.id) %> | 
	<%= link_to "Delete Playlist", [@playlist.user, @playlist], :method => :delete, :confirm => "Are you sure you want to delete #{@playlist.name}?", :title => "Delete #{@playlist.name}?" %>
</div>

