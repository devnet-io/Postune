<div class="breadcrumbs">
	<%= link_to "Admin", admin_index_path %> > 
	<%= link_to "Users", users_path %>
</div>
<h1>Users</h1>
<table>
	<tbody>
		<tr>
			<th>ID</th>
			<th>Name</th>
			<th>Email</th>
			<th>Group</th>
		</tr>

		<% @users.each do |user| %>
		<tr>
			<td><%= user.id %></td>
			<td><%= link_to user.name, user_path(user.id) %></td>
			<td><%= user.email %></td>
			<td><%= link_to user.group.name, user.group %></td>
		</tr>
		<% end %>
	</tbody>
</table>
<div class="info">
	<strong>Number of Users</strong>: <%= @count %>
</div>
<div class="info">
	<strong>Actions</strong> | 
	<%= link_to "Create a User", new_user_path %>
</div>
