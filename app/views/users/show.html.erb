<table>
<tbody>
	<tr>
		<th>Category</th>
		<th>Value</th>
	</tr>
	<tr>
		<td>Username</td>
		<td><%= @user.name %></td>
	</tr>
	<tr>
		<td>Email</td>
		<td><%= @user.email %></td>
	</tr>
	<tr>
		<td>Password</td>
		<td><%= @user.password %></td>
	</tr>
	<tr>
		<td>Created</td>
		<td><%= @user.created_at %></td>
	</tr>
	<tr>
		<td>Group</td>
		<td><%= @user.group.name %></td>
	</tr>
	<tr>
		<td>Playlists</td>
		<td>
			<% @user.playlist.each do |p| %>
				<%= link_to p.name, user_playlist_path(@user, p.id) %> <br />
			<% end %>
		</td>
	</tr>
</tbody>
</table>
