<div class="breadcrumbs">
	<%= link_to "Admin", admin_index_path %> > <%= link_to "Users", users_path %> > <%= link_to @user.name, @user %>
</div>
<h1><%= @user.name %></h1>
<table>
	<tbody>
		<tr>
			<th>Category</th>
			<th>Value</th>
		</tr>
		<tr>
			<td>Username</td>
			<td><%= @user.name %></td>
		</tr>
		<tr>
			<td>Email</td>
			<td><%= @user.email %></td>
		</tr>
		<tr>
			<td>Password</td>
			<td><%= @user.password %></td>
		</tr>
		<tr>
			<td>Created</td>
			<td><%= @user.created_at.to_formatted_s(:long_ordinal) %></td>
		</tr>
		<tr>
			<td>Group</td>
			<td><%= @user.group.name %></td>
		</tr>
	</tbody>
</table>
<div>
	<%= link_to "#{@user.name}'s playlists", user_playlists_path(@user.id) %>
</div>
<div>
	<strong>Actions</strong> | 
	<%= link_to "Add a playlist", new_user_playlist_path(@user.id) %> | 
	<%= link_to "Edit User", edit_user_path(@user.id) %> | 
	<%= link_to "Delete User", @user, :method => :delete, :confirm => "Are you sure you want to delete #{@user.name}?", :title => "Delete #{@user.name}?" %>
</div>
